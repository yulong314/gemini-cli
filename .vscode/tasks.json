{
  // VS Code 任务配置 - Gemini CLI
  "version": "2.0.0",
  "tasks": [
    {
      "label": "🔨 Build All Packages",
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "🧹 Clean Build Artifacts", 
      "type": "npm",
      "script": "clean",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "🔧 Build Core Package",
      "type": "npm", 
      "script": "build:core",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always", 
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "🖥️ Build CLI Package",
      "type": "npm",
      "script": "build:cli", 
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false, 
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "🧪 Run All Tests",
      "type": "npm",
      "script": "test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "🧪 Run Tests (CI Mode)",
      "type": "npm", 
      "script": "test:ci",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "🌐 Run E2E Tests",
      "type": "npm",
      "script": "test:e2e",
      "group": "test", 
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "env": {
          "GEMINI_SANDBOX": "false"
        }
      }
    },
    {
      "label": "✅ Type Check",
      "type": "npm",
      "script": "typecheck",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "🎨 Lint Code",
      "type": "npm", 
      "script": "lint",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "🎨 Fix Lint Issues",
      "type": "npm",
      "script": "lint:fix",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always", 
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "💄 Format Code",
      "type": "npm",
      "script": "format",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "🚀 Start Development Server",
      "type": "npm",
      "script": "start", 
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "isBackground": true,
      "options": {
        "env": {
          "GEMINI_SANDBOX": "false",
          "DEBUG": "1"
        }
      }
    },
    {
      "label": "✈️ Preflight Check",
      "type": "npm",
      "script": "preflight",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc", "$eslint-stylish"]
    },
    {
      "label": "📦 Bundle Application",
      "type": "npm",
      "script": "bundle",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "🐳 Build Sandbox",
      "type": "npm",
      "script": "build:sandbox",
      "group": "build", 
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
